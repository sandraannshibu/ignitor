            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="20dp"
                >


                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:columnCount="2"
                    android:rowCount="5">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv1"
                        android:layout_width="15dp"
                        android:layout_height="130dp"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:layout_columnWeight="1"
                        app:cardCornerRadius="30dp"
                        android:layout_gravity="fill"
                        android:layout_margin="10dp"
                        app:cardBackgroundColor="@color/white"

                        app:cardElevation="50dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|center_horizontal"

                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/manageprofile"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:background="@drawable/pro"
                                />

                            <TextView

                                android:id="@+id/rt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"

                                android:text="My Profile"
                                android:textAlignment="center"

                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv3"
                        android:layout_width="20dp"
                        android:layout_height="130dp"
                        android:layout_row="0"
                        app:cardCornerRadius="30dp"
                        android:layout_rowWeight="0"
                        android:layout_column="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill"
                        android:layout_margin="10dp"
                        app:cardBackgroundColor="@color/white"

                        app:cardElevation="50dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical|center_horizontal"

                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/viewrequest"
                                android:layout_width="70dp"
                                android:layout_height="70dp"

                                android:src="@drawable/req" />

                            <TextView
                                android:id="@+id/ep"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="View payment"
                                android:textAlignment="center"

                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>






                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv4"
                        android:layout_width="10dp"
                        android:layout_height="130dp"
                        android:layout_row="1"
                        android:layout_rowWeight="1"
                        android:layout_column="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill"
                        android:layout_margin="10dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="30dp"
                        app:cardElevation="50dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical|center_horizontal"

                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/spareparts"
                                android:layout_width="70dp"
                                android:layout_height="70dp"

                                android:src="@drawable/spare" />

                            <TextView
                                android:id="@+id/h"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="view spareparts"

                                android:textAlignment="center"

                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv5"
                        android:layout_width="20dp"
                        android:layout_height="100dp"
                        android:layout_row="1"
                        android:layout_rowWeight="1"
                        android:layout_column="0"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill"
                        android:layout_margin="10dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="30dp"
                        app:cardElevation="50dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="210dp"

                            android:layout_gravity="center_vertical|center_horizontal"

                            android:gravity="center"

                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/sendcomplaint"
                                android:layout_width="70dp"
                                android:layout_height="70dp"

                                android:src="@drawable/comp" />

                            <TextView
                                android:id="@+id/gt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="Send Complaint"
                                android:textAlignment="center"

                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/viewsparepar"
                        android:layout_width="20dp"
                        android:layout_height="100dp"
                        android:layout_row="2"
                        android:layout_rowWeight="1"
                        android:layout_column="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill"
                        android:layout_margin="10dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="30dp"
                        app:cardElevation="50dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="210dp"

                            android:layout_gravity="center_vertical|center_horizontal"

                            android:gravity="center"

                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/logout"
                                android:layout_width="70dp"
                                android:layout_height="70dp"

                                android:src="@drawable/logout" />

                            <TextView
                                android:id="@+id/viewspareparts"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="Logout"
                                android:textAlignment="center"

                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/viewor"
                        android:layout_width="20dp"
                        android:layout_height="100dp"
                        android:layout_row="2"
                        android:layout_rowWeight="1"
                        android:layout_column="0"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill"
                        android:layout_margin="10dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="30dp"
                        app:cardElevation="50dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="210dp"

                            android:layout_gravity="center_vertical|center_horizontal"

                            android:gravity="center"

                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/vieworders"
                                android:layout_width="70dp"
                                android:layout_height="70dp"

                                android:src="@drawable/orders" />

                            <TextView
                                android:id="@+id/vieworde"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="view orders"
                                android:textAlignment="center"

                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                </GridLayout>
            </LinearLayout>

